Proceso TresNumerosPares
	Definir n1, n2, n3 Como Real;
	Escribir "Ingrese 3 números:";
	Leer n1;
	Leer n2;
	Leer n3;
	
	Si n1 mod 2=0 Entonces
		Escribir n1," es par.";
	SiNo
		Escribir n1," no es par.";
	FinSi
	
	Si n2 mod 2=0 Entonces
		Escribir n2," es par.";
	SiNo
		Escribir n2," no es par.";
	FinSi
	
	Si n3 mod 2=0 Entonces
		Escribir n3," es par.";
	SiNo
		Escribir n3," no es par.";
	FinSi
	
FinProceso
